rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Tables collection
    match /tables/{tableId} {
      // Allow anyone to read table information
      allow read: if true;
      
      // Allow anyone to write (for development)
      // WARNING: For production, you should restrict this!
      // Consider using Cloud Functions with admin SDK
      allow write: if true;
      
      // Production example (commented out):
      // allow write: if false; // Only allow writes through Cloud Functions
    }
  }
}
